<Window x:Class="HW_WPF_SmoothPic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_WPF_SmoothPic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF232121">
    <Grid>
        <Image Name="Pic" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/TestPic.png" Height="200" Width="200"/>
        <Slider Name="Smooth" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 0, 0" Maximum="80" Width="400" ValueChanged="ChangeSmooth"/>
    </Grid>
</Window>
